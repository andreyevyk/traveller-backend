{
  "openapi": "3.0.0",
  "info": {
    "title": "Traveller Documentation",
    "description": "This is a Traveller app",
    "version": "1.0.0"
  },
  "paths": {
    "/cities": {
      "post": {
        "tags": ["City"],
        "summary": "Create a city",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "sub_description": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }

              }
            }
          }          
        },
        "responses": { 
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["City"],
        "summary": "Get cities",
        "description": "List all cities",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "sub_description": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}